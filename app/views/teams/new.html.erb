<img src="/images/242x82.png"> </img>


<div class="signup_block">


  <%= form_for @team do |f| %>

      <div class="section_block" id="section_block">
        <div class="login_content">
          <div class="login-head">
            <h1>Teams Page</h1>
          </div><!--login-head-->





          <% if @team.errors.any? %>
              <div class="error_messages">
                <h2>Team is invalid</h2>
                <ul>
                  <% for message in @team.errors.full_messages %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :description %><br />
            <%= f.text_field :description %>
          </div>

          <div class="button"><%= f.submit %></div>
        </div>
      </div>
  <% end %>
</div>